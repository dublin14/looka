---
const { isDarkHeader } = Astro.props;
---

<button
  aria-label="Toggle navigation"
  class:list={[
    "nav-toggler hs-dropdown-toggle relative group lg:hidden",
    isDarkHeader && "nav-toggler-dark",
  ]}>
  <div
    class:list={[
      "relative flex flex-col overflow-hidden items-center justify-center rounded-full w-[3rem] h-[3rem] transform ring-1 hover:ring-4 hs-dropdown-open:ring-4 ring-opacity-30 duration-200",
      isDarkHeader ? "ring-white/25 bg-white" : "ring-primary/25 bg-primary",
    ]}>
    <div
      class="overflow-hidden transition-transform duration-150 transform -translate-y-5 hs-dropdown-open:translate-y-3">
      <svg
        xmlns="http://www.w3.org/2000/svg"
        class="w-6 h-6 animate-bounce group-[&.nav-toggler-dark]:text-dark group-[&:not(.nav-toggler-dark)]:text-white"
        fill="none"
        viewBox="0 0 24 24"
        stroke="currentColor"
        stroke-width="2">
        <path stroke-linecap="round" stroke-linejoin="round" d="M5 15l7-7 7 7">
        </path>
      </svg>
    </div>

    <div
      class="justify-between flex flex-col w-[1.125rem] h-[1.125rem] transform transition-transform duration-300 origin-center overflow-hidden -translate-y-3">
      <div
        class="group-[&.nav-toggler-dark]:bg-dark group-[&:not(.nav-toggler-dark)]:bg-white mb-1.5 h-[0.125rem] w-7 transform transition-transform duration-300 origin-left hs-dropdown-open:translate-y-6">
      </div>
      <div
        class="group-[&.nav-toggler-dark]:bg-dark group-[&:not(.nav-toggler-dark)]:bg-white mb-1.5 h-[0.125rem] w-7 rounded transform transition-transform duration-300 hs-dropdown-open:translate-y-6 delay-75">
      </div>
      <div
        class="group-[&.nav-toggler-dark]:bg-dark group-[&:not(.nav-toggler-dark)]:bg-white h-[0.125rem] w-7 transform transition-transform duration-300 origin-left hs-dropdown-open:translate-y-6 delay-100">
      </div>
    </div>
  </div>
</button>
